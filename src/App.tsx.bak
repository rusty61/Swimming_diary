import React from "react";
import { Routes, Route } from "react-router-dom";
import { QueryClient, QueryClientProvider } from "@tanstack/react-query";

import { Toaster } from "@/components/ui/toaster";
import { Toaster as Sonner } from "@/components/ui/sonner";
import { TooltipProvider } from "@/components/ui/tooltip";

import Index from "./pages/Index";
import NotFound from "./pages/NotFound";
import ProfileSetup from "./pages/ProfileSetup";
import DiaryPage from "./pages/DiaryPage"; // Daily diary / data entry
import Landing from "./pages/Landing";

import { AuthProvider } from "./auth/AuthContext";
import { AuthGate } from "./components/Auth/AuthGate";
import { LoginForm } from "./components/Auth/LoginForm";

import Stats from "./pages/Stats"; // Full stats page
import StatsTrendPage from "./pages/StatsTrendPage"; // Graph-only page
import Profile from "./pages/Profile"; // Edit profile
import NotesArchivePage from "./pages/NotesArchivePage"; // Notes archive

// NEW: layout wrapper for authenticated app (bottom nav, etc.)
import { AppShell } from "./components/layout/AppShell";

const queryClient = new QueryClient();

const App: React.FC = () => (
  <QueryClientProvider client={queryClient}>
    <TooltipProvider>
      <Toaster />
      <Sonner />
      <AuthProvider>
        <Routes>
          {/* ---------- Public routes ---------- */}
          <Route path="/login" element={<LoginForm />} />
          <Route path="/landing" element={<Landing />} />

          {/* ---------- Authenticated app ---------- */}
          <Route element={<AuthGate />}>
            {/* AppShell = common layout (main content + bottom nav) */}
            <Route element={<AppShell />}>
              {/* Initial entry point after login/auth check */}
              <Route path="/" element={<Index />} />

              {/* Aliases for mobile nav: Today / Log / Stats / Profile */}
              {/* For now, /today and /log both show the existing DiaryPage.
                 We can split these later into Morning Check-in vs Session Log. */}
              <Route path="/today" element={<DiaryPage />} />
              <Route path="/log" element={<DiaryPage />} />

              {/* Existing diary route kept for compatibility */}
              <Route path="/diary" element={<DiaryPage />} />

              {/* Stats pages */}
              <Route path="/stats" element={<Stats />} />
              <Route path="/stats/trend" element={<StatsTrendPage />} />

              {/* Profile pages */}
              <Route path="/profile" element={<Profile />} />
              <Route path="/profile-setup" element={<ProfileSetup />} />

              {/* Notes archive */}
              <Route path="/notes" element={<NotesArchivePage />} />
            </Route>
          </Route>

          {/* ---------- Catch-all ---------- */}
          <Route path="*" element={<NotFound />} />
        </Routes>
      </AuthProvider>
    </TooltipProvider>
  </QueryClientProvider>
);

export default App;
