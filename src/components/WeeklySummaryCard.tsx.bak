"use client";

import React, { useEffect } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Waves, HeartPulse, CalendarDays } from "lucide-react";
import { supabase } from "@/integrations/supabase/client";
import { useAuth } from "@/auth/AuthContext";
import { startOfWeek, endOfWeek, format } from "date-fns";
import { showError } from "@/utils/toast";
import {
  fetchAllEntriesForUser,
  getWeeklyTrainingVolumeFromEntries,
  getWeeklyAverageHeartRateFromEntries,
  getWeeklyMoodTrendFromEntries,
} from "@/data/dailyEntriesSupabase"; // Import helper functions

interface WeeklySummaryCardProps {
  selectedDate: Date; // Keep selectedDate for context, though summary is for current week
  refreshKey?: number; // New prop
  className?: string;
}

const WeeklySummaryCard: React.FC<WeeklySummaryCardProps> = ({ selectedDate, refreshKey, className }) => {
  const { user } = useAuth();
  const [weeklyTotalKm, setWeeklyTotalKm] = React.useState(0);
  const [weeklyAvgHr, setWeeklyAvgHr] = React.useState(0);
  const [weeklyMoodTrend, setWeeklyMoodTrend] = React.useState("");
  const [loadingSummary, setLoadingSummary] = React.useState(true);

  useEffect(() => {
    if (user) {
      const fetchWeeklySummary = async () => {
        setLoadingSummary(true);
        try {
          const allEntries = await fetchAllEntriesForUser(user.id);
          console.log("WeeklySummaryCard - All Entries:", allEntries); // Log all entries
          const summaryDate = selectedDate; 

          const { total } = getWeeklyTrainingVolumeFromEntries(allEntries, summaryDate);
          setWeeklyTotalKm(total);
          console.log("WeeklySummaryCard - Total Training (km):", total); // Log total training

          const avgHr = getWeeklyAverageHeartRateFromEntries(summaryDate, allEntries);
          setWeeklyAvgHr(avgHr);
          console.log("WeeklySummaryCard - Average Heart Rate (bpm):", avgHr); // Log average HR

          const moodTrend = getWeeklyMoodTrendFromEntries(summaryDate, allEntries);
          setWeeklyMoodTrend(moodTrend);
          console.log("WeeklySummaryCard - Mood Trend:", moodTrend); // Log mood trend

        } catch (error) {
          console.error("Error fetching weekly summary:", error);
          showError("Failed to load weekly summary.");
        } finally {
          setLoadingSummary(false);
        }
      };

      fetchWeeklySummary();
    }
  }, [user, selectedDate, refreshKey]);

  return (
    <Card className="bg-card text-foreground shadow-md border-card-border p-6">
      <CardHeader className="p-0 mb-4">
        <CardTitle className="text-2xl font-bold text-accent flex items-center">
          <CalendarDays className="mr-2" /> Weekly Summary
        </CardTitle>
      </CardHeader>
      <CardContent className="p-0 space-y-3">
        {loadingSummary ? (
          <div className="text-center text-text-muted">Loading weekly summary...</div>
        ) : (
          <>
            <div className="flex items-center justify-between text-lg">
              <span className="flex items-center text-text-main"><Waves className="mr-2 text-accent" />Total Training:</span>
              <span className="font-semibold text-accent">{weeklyTotalKm.toFixed(1)} km</span>
            </div>
            <div className="flex items-center justify-between text-lg">
              <span className="flex items-center text-text-main"><HeartPulse className="mr-2 text-accent" />Avg. Heart Rate:</span>
              <span className="font-semibold text-accent">{weeklyAvgHr} bpm</span>
            </div>
            <div className="flex items-center justify-between text-lg">
              <span className="flex items-center text-text-main">Mood Trend:</span>
              <span className="font-semibold text-accent">{weeklyMoodTrend}</span>
            </div>
          </>
        )}
      </CardContent>
    </Card>
  );
};

export default WeeklySummaryCard;